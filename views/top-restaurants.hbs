{{> restaurant-tabs route='topRestaurants'}}
<h1>Top 10 人氣餐廳</h1>
<hr>
{{#each restaurants}}
<div class="card mb-3 mx-auto" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="{{this.image}}" class="img-fluid rounded-start" alt="...">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><a href="/restaurants/{{this.id}}">{{this.name}}</a></h5>
        <span class="badge bg-secondary">收藏數: {{this.favoritedCount}}</span>
        <p class="card-text">{{this.description}}</p>
        <div class="d-flex">
          <p class="me-3"><a href="/restaurants/{{this.id}}" class="btn btn-primary">Show</a></p>
          {{#if isFavorited}}
          <form action="/favorite/{{this.id}}?_method=DELETE" method="post">
            <button class="btn btn-danger" type="submit">移除最愛</button>
          </form>
          {{else}}
          <form action="/favorite/{{this.id}}" method="post">
            <button class="btn btn-primary" type="submit">加到最愛</button>
          </form>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>
{{/each}}
